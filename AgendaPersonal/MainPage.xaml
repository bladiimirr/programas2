<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.MainPage"
             BackgroundColor="#edf2f7">

    <Grid Padding="20" VerticalOptions="Center" HorizontalOptions="Center">
        <ScrollView>
            <VerticalStackLayout WidthRequest="320"
                                 Spacing="20"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 HeightRequest="600">

                <Label Text="Agenda Personal"
                       FontSize="30"
                       FontAttributes="Bold"
                       TextColor="#2c5282"
                       HorizontalOptions="Center"
                       Margin="0,10,0,10" />

                <Frame BackgroundColor="White"
                       Padding="30"
                       CornerRadius="20"
                       BorderColor="#cbd5e0"
                       WidthRequest="320"
                       HasShadow="True"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <Frame.Shadow>
                        <Shadow Brush="#000000" Offset="0,4" Radius="12" Opacity="0.1" />
                    </Frame.Shadow>

                    <VerticalStackLayout Spacing="18">
                        <Button Text="Lista de Contactos"
                                Clicked="IrListaContactos"
                                BackgroundColor="#3182ce"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="20"
                                HeightRequest="55" />

                        <Button Text="Crear Nuevo Contacto"
                                Clicked="IrCrearContacto"
                                BackgroundColor="#2b6cb0"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="20"
                                HeightRequest="55" />

                        <Button Text="Configuración"
                                Clicked="IrConfiguracion"
                                BackgroundColor="#2c5282"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="20"
                                HeightRequest="55" />

                        <BoxView Color="#e2e8f0"
                                 HeightRequest="1"
                                 Margin="0,10,0,10" />

                        <Button Text="Cerrar Sesión"
                                x:Name="LogoutButton"
                                Clicked="LogoutButton_Clicked"
                                BackgroundColor="#e53e3e"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="20"
                                HeightRequest="55" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
