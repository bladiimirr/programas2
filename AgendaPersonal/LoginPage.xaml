<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.LoginPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#edf2f7"
             Title="LoginPage">

    <Grid Padding="20" VerticalOptions="Center" HorizontalOptions="Center">
        <ScrollView>
            <VerticalStackLayout WidthRequest="320" HorizontalOptions="Center" Spacing="16">
                <Frame BackgroundColor="White"
                       CornerRadius="18"
                       Padding="20"
                       BorderColor="#cbd5e0"
                       HasShadow="True">
                    <Frame.Shadow>
                        <Shadow Brush="#000000" Offset="0,4" Radius="12" Opacity="0.1" />
                    </Frame.Shadow>

                    <VerticalStackLayout Spacing="16">
                        <!-- Logo -->
                        <Image Source="brushfill.png"
                               HeightRequest="80"
                               IsVisible="True"
                               HorizontalOptions="Center" />

                        <!-- Titulo -->
                        <Label Text="Iniciar Sesión"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="#2c5282"
                               HorizontalOptions="Center" />

                        <Label Text="Accede con tus credenciales"
                               FontSize="14"
                               TextColor="#718096"
                               HorizontalOptions="Center" />

                        <!-- Usuario -->
                        <Label Text="Usuario" TextColor="#4a5568" FontAttributes="Bold" />
                        <Frame BackgroundColor="#f7fafc" Padding="8" CornerRadius="10" BorderColor="#e2e8f0">
                            <Entry x:Name="Username"
                                   Text="{Binding Email, Mode=TwoWay}"
                                   Placeholder="Ingresa tu usuario"
                                   TextColor="#1a202c"
                                   FontSize="16" />
                        </Frame>

                        <!-- Contraseña -->
                        <Label Text="Contraseña" TextColor="#4a5568" FontAttributes="Bold" />
                        <Frame BackgroundColor="#f7fafc" Padding="8" CornerRadius="10" BorderColor="#e2e8f0">
                            <Entry x:Name="Password"
                                   Text="{Binding Password, Mode=TwoWay}"
                                   Placeholder="********"
                                   IsPassword="True"
                                   TextColor="#1a202c"
                                   FontSize="16" />
                        </Frame>

                        <!-- Botón Login -->
                        <Button Text="Acceder"
                                x:Name="LoginButton"
                                Clicked="LoginButton_Clicked"
                                BackgroundColor="#3182ce"
                                TextColor="White"
                                FontAttributes="Bold"
                                FontSize="16"
                                CornerRadius="12"
                                HeightRequest="50" />

                        <!-- Separador -->
                        <BoxView HeightRequest="1" Color="#e2e8f0" />

                        <!-- Enlaces adicionales -->
                        <VerticalStackLayout Spacing="8">
                            <Label HorizontalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="¿No tienes una cuenta? " TextColor="#4a5568" />
                                        <Span Text="Regístrate"
                                              TextColor="#3182ce"
                                              TextDecorations="Underline">
                                            <Span.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="TapGestureRecognizerReg_Tapped" />
                                            </Span.GestureRecognizers>
                                        </Span>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label HorizontalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="¿olvidaste la clave? " TextColor="#4a5568" />
                                        <Span Text="Recuperar"
                                              TextColor="#3182ce"
                                              TextDecorations="Underline">
                                            <Span.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="TapGestureRecognizerPwd_Tapped" />
                                            </Span.GestureRecognizers>
                                        </Span>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>

