<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.CrearContactoPage"
             BackgroundColor="#edf2f7">

    <ScrollView>
        <FlexLayout Direction="Column"
                    AlignItems="Center"
                    JustifyContent="Center"
                    Padding="30"
                    Margin="0,40,0,0"
                    BindableLayout.ItemsSource="{Binding}"
                    >

            <Label Text="Nuevo Contacto"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="#2c5282"
                   Margin="0,0,0,25" />

            <Frame CornerRadius="15"
                   Padding="12"
                   HasShadow="True"
                   WidthRequest="300"
                   BackgroundColor="White"
                   BorderColor="#cbd5e0"
                   Margin="0,0,0,12">
                <Entry x:Name="nombreEntry"
                       Placeholder="Nombre"
                       BackgroundColor="Transparent"
                       FontSize="16"
                       TextColor="#2d3748"/>
            </Frame>

            <Frame CornerRadius="15"
                   Padding="12"
                   HasShadow="True"
                   WidthRequest="300"
                   BackgroundColor="White"
                   BorderColor="#cbd5e0"
                   Margin="0,0,0,12">
                <Entry x:Name="correoEntry"
                       Placeholder="Correo"
                       Keyboard="Email"
                       BackgroundColor="Transparent"
                       FontSize="16"
                       TextColor="#2d3748"/>
            </Frame>

            <Frame CornerRadius="15"
                   Padding="12"
                   HasShadow="True"
                   WidthRequest="300"
                   BackgroundColor="White"
                   BorderColor="#cbd5e0"
                   Margin="0,0,0,25">
                <Entry x:Name="telefonoEntry"
                       Placeholder="TelÃ©fono"
                       Keyboard="Telephone"
                       BackgroundColor="Transparent"
                       FontSize="16"
                       TextColor="#2d3748"/>
            </Frame>

            <Button Text="Guardar Contacto"
                    WidthRequest="300"
                    BackgroundColor="#2b6cb0"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnGuardarClicked"/>
        </FlexLayout>
    </ScrollView>
</ContentPage>
